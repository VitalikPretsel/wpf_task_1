<UserControl x:Class="WpfTask.UserControls.TextRowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTask.UserControls"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding LabelToDisplay, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <TextBlock Text="{Binding ContentToDisplay, RelativeSource={RelativeSource AncestorType=UserControl}}" Padding="20,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
